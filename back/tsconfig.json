{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",

    "sourceMap": true,
    "module": "commonjs",
    "target": "es2018",
    "lib": ["es2017", "es2016", "es2015", "es2018"],
    "moduleResolution": "node",

    "allowJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,

    "allowSyntheticDefaultImports": false,
    "importHelpers": true,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "scripts",
    "jest",
    "src/setupTests.ts"
  ]
}
